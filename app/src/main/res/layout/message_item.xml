<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/send_round_box"
        android:backgroundTint="@color/light_green_500"
        android:padding="14dp"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        tools:text="This is a sample message that will appear" />

    <TextView
        android:id="@+id/tv_bot_message"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/receive_round_box"
        android:backgroundTint="@color/gray"
        android:padding="14dp"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:visibility="visible"
        tools:text="This is a sample message that will appear" />


</RelativeLayout>